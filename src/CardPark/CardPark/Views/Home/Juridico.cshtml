@section Scripts {
    <script>
        $(document).ready(function () {            
            $('#clientesJuridicosTable').DataTable({
                ajax: {
                    url: '/Home/GetClientesJuridicos',
                    type: 'GET',
                    dataSrc: ''
                },
                columns: [
                    { data: 'cpfCnpj' },
                    { data: 'nomeRazaoSocial' },
                    { data: 'nomeFantasia' },
                    { data: 'cep' },
                    { data: 'logradouro' },
                    { data: 'numero' },
                    { data: 'complemento' },
                    { data: 'bairro' },
                    { data: 'cidade' },
                    { data: 'estado' },
                    { data: 'telefone' },
                    { data: 'telefoneAlt' },
                    { data: 'email' },
                    { data: 'emailAlt' }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/pt-BR.json'
                },
                searching: true,
                initComplete: function () {
                    this.api().columns([0, 1, 2]).every(function () { // Índices 0 (CNPJ), 1 (Razão Social), 2 (Nome Fantasia)
                        var column = this;
                        var input = $('<input type="text" placeholder="Filtrar..." class="form-control form-control-sm" />')
                            .appendTo($(column.footer()).empty())
                            .on('keyup change', function () {
                                if (column.search() !== this.value) {
                                    column.search(this.value).draw();
                                }
                            });
                    });
                }
            });
            table.search('').draw();
        });
    </script>
}